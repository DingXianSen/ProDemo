<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_dish_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--生活商品-门店详情-单项-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:paddingLeft="15dp">
        <!--单项图片-->
        <ImageView
            android:id="@+id/iv_item_life_product"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_launcher" />

        <!--名称-->
        <TextView
            android:id="@+id/tv_item_life_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/iv_item_life_product"
            android:ellipsize="end"
            android:maxLength="15"
            android:singleLine="true"
            android:text="新上市猕猴桃"
            android:textColor="@color/color_222222"
            android:textSize="12dp" />

        <!--月售-->
        <TextView
            android:id="@+id/tv_item_life_product_monty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_life_product_name"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/iv_item_life_product"
            android:text="月售 34"
            android:textColor="@color/color_999999"
            android:textSize="10dp" />

        <!--售价-->
        <TextView
            android:id="@+id/tv_item_life_product_money_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_life_product"
            android:layout_toRightOf="@+id/iv_item_life_product"
            android:text="¥"
            android:textColor="@color/color_ff0c0c"
            android:textSize="9dp" />
        <!--售价-->
        <TextView
            android:id="@+id/tv_item_life_product_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_life_product"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="-2dp"
            android:layout_toRightOf="@+id/tv_item_life_product_money_key"
            android:text="28.8"
            android:textColor="@color/color_ff0c0c"
            android:textSize="14dp" />


        <!--加减区域-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_group_list_item_count_reduce"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:clickable="true"

                android:src="@mipmap/iv_shopping_cart_reduce" />

            <TextView
                android:id="@+id/tv_group_list_item_count_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingTop="10dp"
                android:paddingRight="2dp"
                android:text="0"
                android:textColor="#333333"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/iv_group_list_item_count_add"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:src="@mipmap/iv_shopping_cart_add" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>