<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--工位单项UI-->
    <RelativeLayout
        android:id="@+id/rl_item_service_station_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_service_station_bg_gray"
        android:paddingTop="2dp">

        <!--时间-->
        <TextView
            android:id="@+id/tv_item_service_station_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="09:00"
            android:textColor="@color/color_999999"
            android:textSize="14dp" />
        <!--分割线条-->
        <View
            android:id="@+id/v_item_service_station_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_item_service_station_time"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:background="@color/color_999999" />

        <!--时间-->
        <TextView
            android:id="@+id/tv_item_service_station_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_item_service_station_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:text="7/10"
            android:textColor="@color/color_999999"
            android:textSize="12dp" />


        <!--选中角标-->
        <ImageView
            android:id="@+id/iv_item_service_station_sel"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/iv_item_service_station_sel"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>